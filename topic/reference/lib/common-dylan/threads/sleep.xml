<dylanFunction id="lib-common-dylan-threads-sleep">
  <apiName>sleep</apiName>

  <shortdesc>Blocks the current thread for a specified number of
  seconds</shortdesc>

  <prolog>
    <author></author>
    <copyright>
      <copyryear year="2005"/>
      <copyrholder>Gwydion Dylan Maintainers</copyrholder>
    </copyright>
  </prolog>

  <dylanFunctionDetail>
    <dylanFunctionDef>
      <dylanFunctionParam>
	<apiItemName>secs</apiItemName>
        <apiOperationClassifier href="../../dylan/dylan/LrealG.xml">&lt;real&gt;</apiOperationClassifier>
	<apiDefNote></apiDefNote>
      </dylanFunctionParam>
    </dylanFunctionDef>

    <apiDesc>
      <p>Blocks the current thread for the number of seconds specified
      in <parmname>interval</parmname> .</p>
    </apiDesc>
  </dylanFunctionDetail>
</dylanFunction>
